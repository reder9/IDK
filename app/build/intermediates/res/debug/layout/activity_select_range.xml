<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@mipmap/orange">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please enter your preferred search and price range:"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find sites!"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:background="#ffa007"
        android:onClick="getResults" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progress="7"
        android:progressBackgroundTint="#ff09ffb4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/seekBar"
        android:enabled="false"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:onClick="move"
        android:max="22"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10 miles"
        android:id="@+id/miles"
        android:textSize="25sp"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progress="1"
        android:progressBackgroundTint="#ff09ffb4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/seekBar2"
        android:layout_below="@+id/miles"
        android:enabled="false"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:onClick="move"
        android:max="4"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$"
        android:id="@+id/money"
        android:layout_below="@+id/seekBar2"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:textSize="25sp" />

</RelativeLayout>
